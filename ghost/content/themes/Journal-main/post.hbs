{{!< default}} {{#post}} <article class="blog-post px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <header class="blog-post-header">
      <h2 class="title mb-2">{{title}}</h2>
      {{#is "post" }}
      <div class="meta mb-1"><span class="date">Published
          <time datetime="{{date
                  format=" YYYY-MM-DD" }}">{{date}}</time>
        </span><span class="time">{{reading_time}}
          min read</span>
        <span class="comment">
          {{authors separator=" | " prefix="Writer:"}}
        </span>
      </div>
      {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
      <div class="wrapperTags"></div>
      {{#foreach tags}}
      <span class="tags">
        <a href="{{url}}">{{name}}</a>
      </span>
      {{/foreach}}
  </div>
  {{/get}}

  </header>
  <div class="blog-post-body">
    {{#if feature_image}}
    <figure class="blog-banner">
      <a href="">
        <img src="{{img_url feature_image size=" m"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
      </a>
      {{#if feature_image_caption}}
      <figcaption class="mt-2 text-center image-caption">{{feature_image_caption}}</figcaption>
      {{/if}}
      {{/if}}
      {{/is}}
      {{content}}
  </div>
  {{#is "post"}}
  {{> pagination}}
  {{/is}}
  </article>
  {{/post}}